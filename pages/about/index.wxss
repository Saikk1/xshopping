.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
  margin-left: 50%;
  transform: translateX(-50%);

}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.input-wrapper {
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  margin-right: 10px; 
  border:1px solid #ccc;
  border-left: 0;
  border-right: 0;
  border-radius: 4px;
  width: 100%;
}

.input-label {
  font-size: 16px;
  margin-bottom: 10px;
  margin-right: 15px;
}

.input-field {
  width: 80%;
  height: 30px;
  padding: 5px;

  font-size: 14px;
}

.button {
  display: inline-block;
  padding: 8px 16px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
}
